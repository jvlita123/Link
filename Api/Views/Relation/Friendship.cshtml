@model Service.Models.Relation.GetRelationViewModel

@{
    ViewData["Title"] = "Friendship";
}

<h1 style="padding: 8px 0;
    color: rgba(113, 113, 113, 0.9);
    font-weight: 500;
    text-transform: uppercase;">Friendship</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Friendship">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div style="display: flex; justify-content: center;">You are currently not interested in Friendship</div>
            <div style="display: flex; justify-content: center; padding: 20px;"><input type="submit" value="Join" class="button primary" style="width: 110px; height: 51px; font-size: 25px;"/></div>
       
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
