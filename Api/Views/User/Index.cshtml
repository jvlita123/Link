@model Data.Dto_s.User.MyUserDto

@{
    ViewData["Title"] = "Index";
}

<h1>My profile</h1>
<div>
    <table width="300px">
        <tr>
            <th>@Html.DisplayNameFor(model => model.ProfilePhoto)</th>
            <td><img src="~/Photos/@Model.ProfilePhoto" height="70" width="70" /></td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <td>@Html.DisplayFor(model => model.Name)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <td>@Html.DisplayFor(model => model.Gender)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.IsPremium)</th>
            <td>@Html.DisplayFor(model => model.IsPremium)</td>
        </tr>
    </table>
    <table>
        <tr>
            @{
                if (@Model.Photos.Count > 0)
                {
                    <th>@Html.DisplayNameFor(model => model.Photos)</th>
                    <td><img src="~/Photos/@Model.Photos.First()" height="140" width="140" /></td>
                }
            }
        </tr>
    </table>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
</div>
